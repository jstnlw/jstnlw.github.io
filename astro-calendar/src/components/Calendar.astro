---
import { generateCalendar } from "./calendar.js";

const selectedGame = "HonkaiStarRail"; // Adjust dynamically for other games
const { daysOfWeek, months } = generateCalendar(2025, selectedGame);
---

<style>
  @import "@styles/calendar.css";
</style>

<!-- Render Calendar -->
<div class="calendar-container">
  {months.map((month) => (
    <div class="month">
      <h2>{month.name}</h2>
      <div class="calendar-grid">
        <div class="weekdays">
          {daysOfWeek.map((day) => (
            <div class="day-name">{day}</div>
          ))}
        </div>
        {month.weeks.map((week) => (
          <div class="week">
            {week.map((day) => (
              <div
                class={`day ${
                  day
                    ? month.highlights
                        .filter((h) => h.day === day)
                        .map((h) => h.type)
                        .join(" ")
                    : "empty"
                }`}
              >
                {day || ""}
              </div>
            ))}
          </div>
        ))}
      </div>
    </div>
  ))}
</div>
